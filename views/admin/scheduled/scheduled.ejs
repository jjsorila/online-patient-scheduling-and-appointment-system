<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <%- include('../../templates/header.ejs') %>
    <link rel="stylesheet" href="//cdn.datatables.net/1.12.1/css/jquery.dataTables.min.css" />
    <script type="application/javascript"
        src="https://cdn.datatables.net/1.12.1/js/jquery.dataTables.min.js"></script>
</head>

<body class="bg-light text-dark">
    <div class="content d-flex">
        <%- include('../../templates/sidebar.ejs') %>
        <div class="main">
            <%- include('../../templates/admin-navbar.ejs', { content: "Scheduled Patients" }) %>

            <div class="container">
                <div class="container border border-dark border-4 rounded p-3 bg-light">
                    <div class="form-group w-100 mb-4">
                        <label class="form-label text-center text-dark w-100">SORT</label>
                        <select class="form-select border border-dark border-3 rounded text-center text-dark">
                            <option selected value="DAY">Today</option>
                            <option value="WEEK">This Week</option>
                            <option value="MONTH">This Month</option>
                            <option value="YEAR">This Year</option>
                        </select>
                    </div>
                    <table class="table text-center table-striped table-hover">
                        <thead>
                            <tr>
                                <th class="text-center">PATIENT ID</th>
                                <th class="text-center">PATIENT'S NAME</th>
                                <th class="text-center">PATIENT TYPE</th>
                                <th class="text-center">SCHEDULE</th>
                                <th class="text-center">ACTION</th>
                            </tr>
                        </thead>
                    </table>
                </div>
            </div>
        </div>
    </div>
    <%- include('../../templates/loading.ejs') %>
    <%- include('../../templates/toast.ejs') %>
    <script type="application/javascript" src="/js/admin/scheduled.js"></script>
</body>

</html>