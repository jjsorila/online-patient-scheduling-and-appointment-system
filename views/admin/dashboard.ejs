<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <%- include('../templates/header.ejs') %>
        <link rel="stylesheet" href="/css/admin/dashboard.css" />
        <link rel="stylesheet" href="/css/jquery.dataTables.min.css" />
        <script type="application/javascript" src="/js/jquery.dataTables.min.js"></script>
</head>

<body class="bg-light text-dark">
    <div class="content d-flex">
        <%- include('../templates/sidebar.ejs') %>
        <div class="main">
            <%- include('../templates/admin-navbar.ejs', { content: "Dashboard" }) %>
            <div class="container">
                <div class="d-flex flex-column justify-content-around align-items-center gap-4 w-75 container">
                    <div class="d-flex gap-4">
                        <div class="card-container border border-dark border-3 doctor d-flex align-items-center p-2" style="background-color: #00897B;">
                            <img class="img d-block" src="/doctor-icon.png"/>
                            <div class="form-group mx-auto">
                                <label class="form-label text-center w-100"><h5><%= data.doctors %></h5></label>
                                <h5 class="text-center">DOCTORS</h5>
                            </div>
                        </div>
                        <div class="card-container border border-dark border-3 staffs bg-info d-flex align-items-center p-2">
                            <img class="img d-block" src="/staff-icon.png"/>
                            <div class="form-group mx-auto">
                                <label class="form-label text-center w-100"><h5><%= data.staffs %></h5></label>
                                <h5 class="text-center">STAFF</h5>
                            </div>
                        </div>
                    </div>
                    <div class="d-flex gap-4">
                        <div class="card-container border border-dark border-3 patient bg-warning d-flex align-items-center p-2">
                            <img class="img d-block" src="/patient-icon.png"/>
                            <div class="form-group mx-auto">
                                <label class="form-label text-center w-100"><h5><%= data.patients %></h5></label>
                                <h5 class="text-center">PATIENTS</h5>
                            </div>
                        </div>
                        <div class="card-container border border-dark border-3 scheduled bg-danger d-flex align-items-center p-2">
                            <img class="img d-block" src="/scheduled-icon.png"/>
                            <div class="form-group mx-auto">
                                <label class="form-label text-center w-100"><h5><%= data.scheduled %></h5></label>
                                <h5 class="text-center">SCHEDULED PATIENTS TODAY</h5>
                            </div>
                        </div>
                    </div>
                </div>


                <div class="container border border-dark border-4 c-box d-flex mt-5 p-2 gap-2 rounded">
                    <div class="w-50 d-flex flex-column justify-content-around h-100 p-4">
                        <h3 class="text-center m-0">Time Schedule</h3>
                        <div class="rounded d-flex gap-3">
                            <div class="w-50 d-flex justify-content-center align-items-center flex-column gap-3">
                                <label class="text-center w-100">Start Day</label>
                                <select disabled id="startDay" class="border border-dark border-3 text-center rounded form-select">
                                    <% ["Sunday","Monday","Tuesday","Wednesday","Thursday","Friday","Saturday"].forEach((v, i) => { %>
                                        <% if(i == data?.schedule?.startDay) { %>
                                            <option value="<%= i %>" selected><%= v %></option>
                                        <% }else{ %>
                                            <option value="<%= i %>"><%= v %></option>
                                        <% } %>
                                    <% }) %>
                                </select>
                            </div>
                            <div class="w-50 d-flex justify-content-center align-items-center flex-column gap-3">
                                <label class="text-center w-100">End Day</label>
                                <select disabled id="endDay" class="border border-dark border-3 text-center rounded form-select">
                                    <% ["Sunday","Monday","Tuesday","Wednesday","Thursday","Friday","Saturday"].forEach((v, i) => { %>
                                        <% if(i == data?.schedule?.endDay) { %>
                                            <option value="<%= i %>" selected><%= v %></option>
                                        <% }else{ %>
                                            <option value="<%= i %>"><%= v %></option>
                                        <% } %>
                                    <% }) %>
                                </select>
                            </div>
                        </div>
                        <div class="rounded d-flex gap-3">
                            <div class="w-50 d-flex justify-content-center align-items-center flex-column gap-3">
                                <label class="text-center w-100">Start Time</label>
                                <input disabled type="time" value="<%= data?.schedule?.startTime %>" class="form-control text-center border border-dark border-3" id="startTime">
                            </div>
                            <div class="w-50 d-flex justify-content-center align-items-center flex-column gap-3">
                                <label class="text-center w-100">End Time</label>
                                <input disabled type="time" value="<%= data?.schedule?.endTime %>" class="form-control text-center border border-dark border-3" id="endTime">
                            </div>
                        </div>
                        <button class="btn btn-primary" id="edit">EDIT</button>
                        <button class="btn btn-success d-none" id="save">SAVE</button>
                    </div>
                    <div class="bg-light p-4 w-50 h-100 d-flex flex-column justify-content-around">
                        <div id="calendar" class="text-dark"></div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <%- include('../templates/toast.ejs') %>
    <%- include('../templates/loading.ejs') %>
    <script type="application/javascript" src="/js/admin/dashboard.js"></script>
</body>

</html>