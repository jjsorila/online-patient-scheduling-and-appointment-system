<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <%- include('../templates/header.ejs') %>
        <link rel="stylesheet" href="/css/admin/login.css" />
</head>

<body>
    <form autocomplete="off"
        class="text-dark w-50 h-75 border bg-light border-dark border-5 d-flex flex-column align-items-center justify-content-around gap-3 login-form p-3">
        <h1>ADMIN LOGIN</h1>
        <div class="form-group text-center w-50">
            <label class="form-label" for="username">Username</label>
            <input type="text" id="username" class="form-control border border-dark border-4 " required />
        </div>
        <div class="form-group text-center w-50">
            <label class="form-label" for="password">Password</label>
            <input type="password" id="password" class="form-control border border-dark border-4 " required />
        </div>
        <div class="form-group d-flex flex-column gap-4 alignt-items-center text-center my-3 w-50">
            <button class="btn btn-light border w-100 bg-dark text-light border-dark border-4 button">LOGIN</button>
            <a class="text-dark mt-3" href="/">GO TO WEBSITE</a>
        </div>

        <%- include('../templates/loading.ejs') %>
    </form>

    <%- include('../templates/toast.ejs') %>
        <script type="application/javascript" src="/js/admin/login.js"></script>
</body>

</html>