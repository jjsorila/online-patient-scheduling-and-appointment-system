<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <%- include('../templates/header.ejs') %>
        <link rel="stylesheet" href="/css/admin/login.css" />
</head>

<body class="bg-dark">
    <form autocomplete="off"
        class="text-light w-50 h-75 border border-light border-5 d-flex flex-column align-items-center justify-content-around gap-3 login-form p-3">
        <h1>LOGIN</h1>
        <div class="form-group text-center w-50">
            <label class="form-label" for="username">Username</label>
            <input type="text" id="username" class="form-control" required />
        </div>
        <div class="form-group text-center w-50">
            <label class="form-label" for="password">Password</label>
            <input type="password" id="password" class="form-control" required />
        </div>
        <div class="form-group text-center my-3">
            <button class="btn btn-dark border border-light border-4 button">LOGIN</button>
        </div>

        <%- include('../templates/loading.ejs') %>
    </form>

    <%- include('../templates/toast.ejs') %>
        <script type="application/javascript" src="/js/admin/login.js"></script>
</body>

</html>